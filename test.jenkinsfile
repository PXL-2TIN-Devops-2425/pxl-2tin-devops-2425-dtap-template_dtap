pipeline {
    agent any
    tools {
        nodejs 'testenvnode'
    }
    environment {
        DOCKER_CRED = credentials("dockerhub_credentials")
        IMAGE_NAME = "mathijsdewilde/calculatorapp"
    }
    stages {
        stage ('cleanup'){
            steps{
                cleanWs()
            }
        }
        stage('fetch app code') {
            steps {
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Testing'){
            steps {
                sh 'npm run test'
                junit 'junit.xml'
            }
        }
        stage('Build artifact') {
            steps {
                script {
                    try {
                        sh 'docker container rm -f calculatorapp'
                    } catch (error) {
                        echo "Docker container did not exist so was not removed."
                    }
                }
                sh 'docker build . -t $IMAGE_NAME'
            }
        }
        stage('Push artifact') {
            steps {
                sh 'docker login -u $DOCKER_CRED_USR -p $DOCKER_CRED_PSW'
                sh 'docker image push $IMAGE_NAME'
            }
        }
        stage('deployment') {
            steps {
                sh 'docker run --name calculatorapp -d -p 3000:3000 $IMAGE_NAME'
            }
        }
    }
    post{
        cleanup{
            sh 'docker system prune -f'
        }
    }
}
